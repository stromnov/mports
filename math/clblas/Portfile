PortSystem          1.0
PortGroup           github 1.0
PortGroup           cmake 1.0

github.setup        clMathLibraries clBLAS 2.10 v

name                clblas
categories          math
platforms           darwin
license             Apache

maintainers         stromnov openmaintainer

description         A software library containing BLAS functions written in OpenCL
long_description    ${description}

checksums           rmd160  7ab487e64e2d4d17639a35afbc217d57ce404d80 \
                    sha256  849423c86cc89e0cdbcc498c5328370468fafe5828fd4b6bdd2e1206497d646f

worksrcdir          ${distname}/src

patchfiles-append   patch-CMakeLists.txt.diff \
                    patch-clBLASConfig.cmake.in.diff \
                    patch-AutoGemmPreCompileKernels.cpp.diff \
                    patch-PR189.diff

cmake.out_of_source yes

post-patch {
    reinplace "s|%%CMAKE_MODULE_DIR%%|share/cmake/Modules|" ${worksrcpath}/CMakeLists.txt
    reinplace "s|%%PREFIX%%|${prefix}|" ${worksrcpath}/clBLASConfig.cmake.in
}

configure.args-append \
                    -DBUILD_TEST=OFF \
                    -DBUILD_PERFORMANCE=OFF \
                    -DBUILD_SAMPLE=OFF
