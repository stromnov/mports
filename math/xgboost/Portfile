# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0
PortGroup           cxx11 1.0
PortGroup           github 1.0

github.setup        dmlc xgboost 980898f3fbf2e061f6ba6d8ba852770edd9a8196

version             20160312
revision            0
categories          math science
platforms           darwin
license             Apache

maintainers         stromnov openmaintainer

description         Reliable Allreduce and Broadcast Interface for distributed machine learning.
long_description    ${description}

fetch.type          git

post-fetch {
    system -W ${worksrcpath} "git submodule update --init"
}

use_configure       no

variant openmp description {Enable OpenMP.} {
    depends_lib-append  port:libomp
    build.args-replace  USE_OPENMP=0 \
                        USE_OPENMP=1
}

set xgb_plugins {}

variant dense_parser description {Enable dense_parser plugin.} {
    lappend xgb_plugins "plugin/dense_parser/plugin.mk"
}

variant lz4 description {Enable lz4 plugin.} {
    depends_lib-append  port:lz4
    lappend xgb_plugins "plugin/lz4/plugin.mk"
}

pre-build {
    if {[llength ${xgb_plugins}] > 0} {
        build.args-append   XGB_PLUGINS=\"[join ${xgb_plugins}]\"
    }
}

if {![variant_isset openmp]} {
    build.args-append   ADD_CFLAGS="${configure.cflags} ${configure.cc_archflags} ${configure.cxxflags} ${configure.cxx_archflags}" \
                        ADD_LDFLAGS="${configure.ldflags} ${configure.ld_archflags}"
} else {
    configure.compiler  macports-clang-3.7
    build.args-append   ADD_CFLAGS="-I${prefix}/include/libomp ${configure.cflags} ${configure.cc_archflags} ${configure.cxxflags} ${configure.cxx_archflags}" \
                        ADD_LDFLAGS="-L${prefix}/lib/libomp ${configure.ldflags} ${configure.ld_archflags}"
}

build.args-append   USE_OPENMP=0 \
                    CC="${configure.cc}" \
                    CXX="${configure.cxx}"

destroot {
    system -W ${worksrcpath} "install_name_tool -id ${prefix}/lib/libxgboost.so lib/libxgboost.so"
    xinstall -m 755 -d ${destroot}${prefix}/lib
    xinstall -m 755 ${worksrcpath}/lib/libxgboost.so ${destroot}${prefix}/lib
    xinstall -m 755 -d ${destroot}${prefix}/bin
    xinstall -m 755 ${worksrcpath}/xgboost ${destroot}${prefix}/bin
}
