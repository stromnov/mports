# $Id: Portfile 132957 2015-02-16 02:08:58Z mmoll@macports.org $

PortSystem          1.0
PortGroup           cmake 1.0

name                glm
version             0.9.7.2
categories          devel math
platforms           darwin
license             MIT
supported_archs     noarch

maintainers         openmaintainer mmoll

description         OpenGL Mathematics (GLM) C++ library
long_description    OpenGL Mathematics (GLM) is a header only C++ \
                    mathematics library for graphics software based \
                    on the OpenGL Shading Language (GLSL) specification.

homepage            http://glm.g-truc.net/
master_sites        https://github.com/g-truc/glm/releases/download/${version}/

checksums           rmd160  f0677434c2cfe57759402811eb770649aaf419b1 \
                    sha256  bc3d0342602c246713bba36ec9eba955c1663dd76a2919079e403c157b26b53b

use_zip             yes

worksrcdir          ${name}

patchfiles-append   patch-CMakeLists.txt

post-patch {
    reinplace "s|@cmake_modules_dir@|share/cmake/Modules|" ${worksrcpath}/CMakeLists.txt
}

cmake.out_of_source yes

livecheck.type      regex
livecheck.url       https://github.com/g-truc/glm/releases
livecheck.regex     "(\[0-9.\]+\[0-9\])/${name}"
