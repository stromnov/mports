# $Id$

PortSystem          1.0
PortGroup           cmake 1.0
PortGroup           cxx11 1.0
PortGroup           github 1.0
PortGroup           compiler_blacklist_versions 1.0

github.setup        CastXML CastXML d5934bd08651dbda95a65ccadcc5f39637d7bc59

name                castxml
version             20160617
revision            0
categories          lang
platforms           darwin
license             Apache-2

maintainers         stromnov openmaintainer

description         CastXML is a C-family abstract syntax tree XML output tool.
long_description    ${description}

checksums           rmd160  cb20736a6f19b48348f9a97beddad5b17b1a4544 \
                    sha256  e414da488d0d6f6aed3087c89a6b6f8c2865a46d3b278753c432ea7e89b7629c

cmake.out_of_source yes

depends_lib-append  port:zlib \
                    port:libffi \
                    port:libedit \
                    port:ncurses

configure.args-append \
                    -DCastXML_INSTALL_DOC_DIR=share/doc/castxml

variant clang36 conflicts clang37 clang38 description {Use clang 3.6 toolchain.} {
    depends_build-append \
                        port:clang-3.6
    configure.args-append \
                        -DLLVM_DIR=${prefix}/libexec/llvm-3.6/share/llvm/cmake
}

variant clang37 conflicts clang36 clang38 description {Use clang 3.7 toolchain.} {
    depends_build-append \
                        port:clang-3.7
    configure.args-append \
                        -DLLVM_DIR=${prefix}/libexec/llvm-3.7/share/llvm/cmake
}

variant clang38 conflicts clang36 clang37 description {Use clang 3.8 toolchain.} {
    depends_build-append \
                        port:clang-3.8
    configure.args-append \
                        -DLLVM_DIR=${prefix}/libexec/llvm-3.8/share/llvm/cmake
}

if {![variant_isset clang36] && ![variant_isset clang37] && ![variant_isset clang38]} {
    default_variants +clang36
}
